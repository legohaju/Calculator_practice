<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2f0cb"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="362dp"
            android:layout_height="172dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:background="#ffffb5"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="348dp"
            android:layout_height="62dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <RadioButton
                android:id="@+id/radioBtn1"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:text="Black"
                android:textColor="#232121"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioBtn2"
                android:layout_width="106dp"
                android:layout_height="60dp"
                android:fontFamily="sans-serif"
                android:text="Blue"
                android:textColor="#108AEC"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radioBtn3"
                android:layout_width="124dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Red"
                android:textColor="#F44336"
                android:textSize="15sp" />

        </RadioGroup>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="342dp"
            android:layout_height="52dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#CE93D8"
            android:text="(+/-) +"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="#80DEEA"
            android:text="C"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#CE93D8"
            android:text="--"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Button
            android:id="@+id/numBtn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF8A65"
            android:text="7"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/numBtn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="#FF8A65"
            android:text="8"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/numBtn9"
            app:layout_constraintStart_toEndOf="@+id/numBtn7"
            app:layout_constraintTop_toBottomOf="@+id/clearBtn" />

        <Button
            android:id="@+id/numBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF8A65"
            android:text="4"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn7" />

        <Button
            android:id="@+id/numBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF8A65"
            android:text="1"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn4" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF8A65"
            android:text="."
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn1" />

        <Button
            android:id="@+id/numBtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="#FF8A65"
            android:text="5"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/numBtn6"
            app:layout_constraintStart_toEndOf="@+id/numBtn4"
            app:layout_constraintTop_toBottomOf="@+id/numBtn8" />

        <Button
            android:id="@+id/numBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="#FF8A65"
            android:text="2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/numBtn3"
            app:layout_constraintStart_toEndOf="@+id/numBtn1"
            app:layout_constraintTop_toBottomOf="@+id/numBtn5" />

        <Button
            android:id="@+id/numBtn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="#FF8A65"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/calBtn"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/numBtn2" />

        <Button
            android:id="@+id/numBtn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#FF8A65"
            android:text="9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/numBtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#FF8A65"
            android:text="6"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn9" />

        <Button
            android:id="@+id/numBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#FF8A65"
            android:text="3"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn6" />

        <Button
            android:id="@+id/calBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#CDDC39"
            android:text="="
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numBtn3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="412dp"
            android:layout_height="20dp"
            android:layout_marginTop="29dp"
            android:background="#66BB6A"
            android:text="©2024 by Hayoung Jung. All right reserved"
            android:textAlignment="center"
            android:textColor="#FDFCFC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>